<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:focusable="true"
    android:layout_marginBottom="@dimen/margin10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin10"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"

            android:id="@+id/img"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginTop="10dp"
                android:rating="3"
                android:layout_gravity="end"
                style="@style/AppThemeRatingBar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name movie"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />
            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12/10 11:00"
                android:textSize="@dimen/text_medium"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />

            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2:50:10 "
                android:textSize="@dimen/text_medium"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />

            <TextView
                android:id="@+id/lib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="liberity 1 "
                android:textSize="@dimen/text_medium"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100$ "
                android:textSize="@dimen/text_medium"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />
            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="details gs sdfsdgsdfsdfsffsdfdetails  details bla bla bla bla vl  details details details  "
                android:maxLines="2"
                android:textColor="@color/white"
                android:layout_margin="3dp"
                />



        </LinearLayout>


    </LinearLayout>

</LinearLayout>
