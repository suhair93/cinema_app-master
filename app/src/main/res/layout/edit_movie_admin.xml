<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layoutDirection="ltr"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@color/colorAccent">

            <Button
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/margin"
                android:background="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Edit movie"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_medium"/>


        </android.support.v7.widget.Toolbar>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"
          android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/edit" />
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="movie name "
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/white"/>



        </LinearLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"

            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:entries="@array/type"
                android:layout_marginStart="40dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/white"
                android:spinnerMode="dropdown" />

            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/arrow" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/time" />

            <EditText
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="movie duration show "
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"

                android:spinnerMode="dropdown" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/date" />
            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="time of showing "
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"

                android:spinnerMode="dropdown" />



        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/price" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="ticket price "
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textColor="@color/white"
                android:spinnerMode="dropdown" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/button_layout"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:background="@drawable/show" />

            <EditText
                android:id="@+id/lib"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="libarity  "
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />



        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"

            android:background="@drawable/corner"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/img"
                android:layout_height="@dimen/img"
                android:layout_alignParentLeft="true"

                android:gravity="top"
                android:background="@drawable/details" />

            <EditText
                android:id="@+id/details"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:hint="details   "
                android:lines="4"
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="top|center_horizontal"

                android:spinnerMode="dropdown" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin10"
            android:layoutDirection="ltr"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin"


            android:orientation="horizontal">



            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin10"
                android:textColorHint="@color/disabled_color"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />






        </LinearLayout>

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@color/colorAccent"
            android:text="save"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>
</ScrollView>